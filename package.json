{
  "name": "@ff00ff/mammoth",
  "license": "MIT",
  "version": "1.0.0-rc.1",
  "main": "./.build/index.js",
  "types": "./.build/index.d.ts",
  "keywords": [
    "typescript",
    "postgres",
    "query",
    "builder",
    "sql",
    "typed",
    "database",
    "orm"
  ],
  "files": [
    ".build"
  ],
  "devDependencies": {
    "@types/jest": "^26.0.13",
    "@types/node": "^14.6.4",
    "dts-jest": "^23.3.0",
    "jest": "^26.4.2",
    "prettier": "^2.1.1",
    "ts-jest": "^26.4.0",
    "typescript": "^4.0.2"
  },
  "scripts": {
    "test": "jest",
    "prebuild": "rm -rf .build && rm -rf coverage",
    "build": "tsc"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "__tests__",
      "__checks__"
    ],
    "testPathIgnorePatterns": [
      "/\\.build/",
      "/node_modules/",
      "helpers"
    ],
    "testRegex": "/__tests__|__checks__/.*\\.(test|check)\\.ts$",
    "transform": {
      "\\.check\\.ts$": "dts-jest/transform",
      "\\.ts$": "ts-jest"
    }
  }
}
