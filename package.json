    "rimraf": "^2.6.2",
    "standard-version": "^4.2.0",
    "ts-jest": "^22.0.2",
    "ts-node": "^4.1.0",
    "tslint": "^5.9.1",
    "tslint-config-airbnb": "^5.5.0",
    "tslint-config-prettier": "^1.6.0",
