{
  "private": true,
  "workspaces": [
    "modules/*"
  ],
  "name": "mammoth",
  "license": "MIT",
  "scripts": {
    "postinstall": "lerna bootstrap",
    "test": "lerna run test",
    "build": "lerna run build"
  },
  "dependencies": {
    "lerna": "^3.20.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testRegex": "/__tests__/.*\\.test\\.tsx?$",
    "transform": {
      "\\.tsx?$": "ts-jest"
    }
  }
}
