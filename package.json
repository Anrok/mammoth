{
  "name": "@anrok/mammoth",
  "license": "MIT",
  "version": "0.0.1",
  "main": "./.build/index.js",
  "types": "./.build/index.d.ts",
  "keywords": [
    "typescript",
    "postgres",
    "query",
    "builder",
    "sql",
    "typed",
    "database",
    "orm"
  ],
  "files": [
    ".build"
  ],
  "devDependencies": {
    "@tsd/typescript": "^5.2.2",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.4.10",
    "jest": "^26.6.3",
    "jest-runner-tsd": "^6.0.0",
    "prettier": "^3.0.3",
    "ts-jest": "^26.5.6",
    "typescript": "^4.3.5"
  },
  "scripts": {
    "test": "jest",
    "prettier": "prettier --write src",
    "prettier-check": "prettier --check src",
    "prebuild": "rm -rf .build && rm -rf coverage",
    "build": "tsc",
    "prepublishOnly": "npm run build && npm test"
  },
  "jest": {
    "projects": [
      {
        "displayName": "unit",
        "moduleFileExtensions": [
          "ts",
          "js"
        ],
        "coveragePathIgnorePatterns": [
          "__tests__",
          "__checks__"
        ],
        "testPathIgnorePatterns": [
          "/\\.build/",
          "/node_modules/",
          "helpers"
        ],
        "testMatch": ["**/__tests__/*.test.ts"],
        "transform": {
          "\\.ts$": "ts-jest"
        },
        "reporters": [
          "default"
        ]
      },
      {
        "displayName": {
            "color": "blue",
            "name": "types"
        },
        "runner": "jest-runner-tsd",
        "testMatch": ["**/__checks__/*.check.ts"]
      }
    ]
  }
}
