{
  "name": "@ff00ff/mammoth",
  "version": "0.10.0",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "license": "MIT",
  "bin": {
    "mammoth": "./bin/mammoth.js"
  },
  "keywords": [
    "typescript",
    "postgres",
    "query",
    "builder",
    "sql",
    "typed",
    "database",
    "orm"
  ],
  "files": [
    "lib",
    "bin"
  ],
  "scripts": {
    "test": "NODE_ENV=test jest",
    "build": "rimraf ./lib && tsc",
    "test_build": "tsc --noEmit lib/**/*.ts",
    "prepublishOnly": "yarn build",
    "reportCoverage": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "docs": "rimraf ./docs && typedoc --out docs src --ignoreCompilerErrors --excludeNotExported --excludePrivate --theme default"
  },
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "@types/lodash": "^4.14.117",
    "@types/minimist": "^1.2.0",
    "@types/node": "^10.12.1",
    "@types/pg": "^7.4.11",
    "@types/uuid": "^3.4.4",
    "coveralls": "^3.0.3",
    "jest": "^24.7.1",
    "prettier": "^1.14.3",
    "rimraf": "^2.6.2",
    "standard-version": "^4.4.0",
    "ts-jest": "^24.0.2",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "3.1.3",
    "uuid": "^3.3.2"
  },
  "dependencies": {
    "chalk": "^2.4.1",
    "lodash": "^4.17.13",
    "minimist": "^1.2.0",
    "pg": "^7.6.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testRegex": "/__tests__/.*\\.test\\.tsx?$",
    "transform": {
      "\\.tsx?$": "ts-jest"
    }
  }
}
