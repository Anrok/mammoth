{
  "name": "@anrok/mammoth",
  "license": "MIT",
  "version": "0.9.0",
  "main": "./.build/index.js",
  "types": "./.build/index.d.ts",
  "keywords": [
    "typescript",
    "postgres",
    "query",
    "builder",
    "sql",
    "typed",
    "database",
    "orm"
  ],
  "files": [
    ".build"
  ],
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.23",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "tstyche": "^4.3.0",
    "typescript": "^5.7.3"
  },
  "scripts": {
    "test": "jest",
    "check": "tstyche",
    "prettier": "prettier --write src",
    "prettier-check": "prettier --check src",
    "prebuild": "rm -rf .build && rm -rf coverage",
    "build": "tsc",
    "prepublishOnly": "npm run build &&  npm run check && npm test"
  },
  "jest": {
    "projects": [
      {
        "displayName": "unit",
        "moduleFileExtensions": [
          "ts",
          "js"
        ],
        "coveragePathIgnorePatterns": [
          "__tests__",
          "__checks__"
        ],
        "testPathIgnorePatterns": [
          "/\\.build/",
          "/node_modules/",
          "helpers"
        ],
        "testMatch": [
          "**/__tests__/*.test.ts"
        ],
        "transform": {
          "\\.ts$": "ts-jest"
        }
      }
    ]
  }
}
