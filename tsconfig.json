{
  "compilerOptions": {
    "lib": ["ES2019"],
    "target": "es2019",
    "module": "commonjs",
    "allowJs": false,
    "declaration": true,
    "sourceMap": true,
    "stripInternal": true,
    "strict": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "outDir": ".build"
  },
  "exclude": ["node_modules", ".build", "./src/__checks__", "./src/__tests__"],
  "include": ["src"]
}
